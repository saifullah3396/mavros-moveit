<?xml version="1.0"?>

<launch>
  <arg name="gui" default="false" />
  <arg name="debug" default="false" />
  <arg name="rvizconfig" default="$(find mavros_moveit)/rviz/moveit.rviz" />
  <arg name="namespace" default="mavros" />
  <arg name="rotors_description_dir" default="$(find px4)/Tools/sitl_gazebo/models/rotors_description" />
  <arg name="visual_material" default="DarkGrey" />
  <param name="robot_description" 
    command="$(find xacro)/xacro 
      $(arg rotors_description_dir)/urdf/iris.xacro 
      rotors_description_dir:=$(arg rotors_description_dir) 
      visual_material:=$(arg visual_material)
      --inorder" 
  />
  <param name="use_gui" value="$(arg gui)"/>
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher">
    <param name="use_gui" value="false"/>
  </node>
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="use_gui" value="false"/>
  </node>

  <!-- Start the moveit move group -->
  <include file="$(find mavros_moveit_config)/launch/move_group.launch">
    <arg name="allow_trajectory_execution" value="true"/>
    <arg name="fake_execution" value="false"/>
    <arg name="info" value="false"/>
    <arg name="debug" value="$(arg debug)"/>
    <arg name="octomap_resolution" value="0.15"/>
    <arg name="pipeline" value="ompl"/>
  </include>

  <!-- Start the moveit action controller -->
  <node name="follow_multi_dof_joint_trajectory_action_server" pkg="mavros_moveit_actions" type="follow_multi_dof_joint_trajectory_action_server" output="screen">
    <param name="rate" value="50"/>
    <param name="control_mode" value="position"/>
  </node>

  <arg name="px4_start_delay" default="20.0" />  
  <!-- Turn off failsafes for simulations -->
  <node name="initialize_px4_params" pkg="mavros_moveit" type="initialize_px4_params" launch-prefix="bash -c 'sleep $(arg px4_start_delay); $0 $@'"/>

  <!-- Start RVIZ Visualisation -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />

</launch>
